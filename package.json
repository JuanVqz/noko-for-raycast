{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "noko",
  "title": "Noko",
  "description": "This is the easiest way to track your time in the Noko Time Tracking platform.",
  "icon": "extension-icon.png",
  "author": "juanvqz",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "entries",
      "title": "Entries",
      "description": "List your Noko Time Tracking entries",
      "mode": "view"
    },
    {
      "name": "add-entry",
      "title": "Add Entry",
      "description": "Add a new entry to Noko Time Tracking",
      "mode": "view"
    },
    {
      "name": "timers",
      "title": "Timers",
      "description": "List your Noko Time Tracking timers",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "personalAccessToken",
      "type": "password",
      "required": true,
      "title": "Personal Access Token",
      "description": "The Noko's personal access token",
      "link": "https://help.nokotime.com/article/103-connecting-to-the-freckle-api",
      "placeholder": "Your Noko's personal access token"
    },
    {
      "name": "timezone",
      "type": "dropdown",
      "required": true,
      "title": "Timezone",
      "description": "Select your timezone.",
      "default": "America/Mexico_City",
      "data": [
        {
          "title": "System Timezone",
          "value": ""
        },
        {
          "title": "America/Mexico_City (Central)",
          "value": "America/Mexico_City"
        },
        {
          "title": "America/New_York (Eastern)",
          "value": "America/New_York"
        },
        {
          "title": "America/Denver (Mountain)",
          "value": "America/Denver"
        },
        {
          "title": "America/Los_Angeles (Pacific)",
          "value": "America/Los_Angeles"
        },
        {
          "title": "Europe/London (GMT/BST)",
          "value": "Europe/London"
        },
        {
          "title": "Europe/Paris (CET/CEST)",
          "value": "Europe/Paris"
        },
        {
          "title": "Europe/Berlin (CET/CEST)",
          "value": "Europe/Berlin"
        },
        {
          "title": "Asia/Tokyo (JST)",
          "value": "Asia/Tokyo"
        },
        {
          "title": "Asia/Shanghai (CST)",
          "value": "Asia/Shanghai"
        },
        {
          "title": "Australia/Sydney (AEST/AEDT)",
          "value": "Australia/Sydney"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.81.2",
    "@raycast/utils": "^1.16.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
